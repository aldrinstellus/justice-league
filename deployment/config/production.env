# Oracle Production Environment Configuration
# Week 11-12: Production Deployment Infrastructure

################################################################################
# Environment Settings
################################################################################
ENVIRONMENT=production
INSTANCE_NAME=production
LOG_LEVEL=INFO

################################################################################
# Database Configuration
################################################################################
DATABASE_PATH=/app/data/oracle.db
DATABASE_BACKUP_DIR=/app/backups
DATABASE_BACKUP_RETENTION_DAYS=30

################################################################################
# Application Settings
################################################################################
ORACLE_VERSION=1.0.0
ENABLE_SELF_HEALING=true
ENABLE_LEARNING_SYSTEM=true
ENABLE_VERSION_CONTROL=true
ENABLE_KNOWLEDGE_BASE=true

################################################################################
# Justice League Agents (11 agents)
################################################################################
AGENTS=batman,superman,wonder_woman,flash,green_lantern,aquaman,cyborg,martian_manhunter,hawkgirl,green_arrow,black_canary

################################################################################
# Health Monitoring
################################################################################
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
METRICS_RETENTION_DAYS=90
ENABLE_PREDICTIVE_MAINTENANCE=true

################################################################################
# Version Control
################################################################################
GIT_ENABLED=true
GIT_AUTO_COMMIT=true
VERSION_BACKUP_ENABLED=true
BREAKING_CHANGE_DETECTION=true

################################################################################
# Self-Healing Configuration
################################################################################
AUTO_HEAL_ENABLED=true
MAX_HEAL_RETRIES=3
HEAL_RETRY_DELAY=10
LOW_RISK_AUTO_APPLY=true
MEDIUM_RISK_AUTO_APPLY=false  # Production requires manual approval for medium risk
HIGH_RISK_AUTO_APPLY=false    # Production requires manual approval for high risk

################################################################################
# Learning System
################################################################################
ENABLE_CROSS_AGENT_LEARNING=true
KNOWLEDGE_SHARING_ENABLED=true
PATTERN_RECOGNITION_THRESHOLD=0.85  # Higher threshold for production
MIN_PATTERN_OCCURRENCES=5           # More occurrences required

################################################################################
# Performance Settings
################################################################################
MAX_CONCURRENT_OPERATIONS=20
OPERATION_TIMEOUT=300
CACHE_ENABLED=true
CACHE_TTL=1800

################################################################################
# Logging Configuration
################################################################################
LOG_FORMAT=json
LOG_TO_FILE=true
LOG_TO_CONSOLE=false  # Production logs to file only
LOG_FILE_PATH=/app/logs/oracle.log
LOG_FILE_MAX_SIZE=500M
LOG_FILE_MAX_BACKUPS=30

################################################################################
# Monitoring & Metrics
################################################################################
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=8000
METRICS_EXPORT_ENABLED=true
CUSTOM_METRICS_ENABLED=true

################################################################################
# Alert Configuration
################################################################################
ALERT_EMAIL_ENABLED=true
ALERT_EMAIL_FROM=oracle@example.com
ALERT_EMAIL_TO=ops-team@example.com,superman@example.com
ALERT_SLACK_ENABLED=true
ALERT_SLACK_WEBHOOK_URL=${SLACK_WEBHOOK_URL}
ALERT_WEBHOOK_ENABLED=false
ALERT_CRITICAL_THRESHOLD=1  # Alert immediately on critical issues
ALERT_WARNING_THRESHOLD=3

################################################################################
# Security Settings
################################################################################
ENABLE_AUDIT_LOG=true
AUDIT_LOG_PATH=/app/logs/audit.log
SECURE_MODE=true
REQUIRE_AUTHENTICATION=true
ENABLE_ENCRYPTION=true
MIN_PASSWORD_LENGTH=12

################################################################################
# External Integrations
################################################################################
SUPERMAN_CONNECTOR_ENABLED=true
EXTERNAL_API_TIMEOUT=60
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=500   # More conservative for production
RATE_LIMIT_PERIOD=60

################################################################################
# Backup & Recovery
################################################################################
AUTO_BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 0,12 * * *"  # Twice daily (midnight and noon)
BACKUP_COMPRESSION=true
BACKUP_RETENTION_COUNT=30
BACKUP_VERIFICATION_ENABLED=true

################################################################################
# High Availability
################################################################################
ENABLE_BLUE_GREEN_DEPLOYMENT=true
HEALTH_CHECK_REQUIRED_FOR_TRAFFIC=true
GRACEFUL_SHUTDOWN_TIMEOUT=30
ENABLE_CIRCUIT_BREAKER=true

################################################################################
# Compliance & Governance
################################################################################
ENABLE_COMPLIANCE_MODE=true
DATA_RETENTION_DAYS=365
GDPR_COMPLIANCE=true
HIPAA_COMPLIANCE=false
SOC2_COMPLIANCE=true

################################################################################
# Performance Targets (SLA)
################################################################################
TARGET_UPTIME_PERCENTAGE=99.9
MAX_HEALTH_CHECK_MS=500
MAX_VERSION_CHECK_MS=500
MAX_SYSTEM_SCAN_MS=2000
MAX_DEPENDENCY_GRAPH_MS=1000

################################################################################
# Testing & Development (disabled in production)
################################################################################
ENABLE_TEST_MODE=false
MOCK_EXTERNAL_SERVICES=false
VERBOSE_ERROR_MESSAGES=false
STACK_TRACES_ENABLED=false  # Don't expose stack traces in production
