# Oracle Staging Environment Configuration
# Week 11-12: Production Deployment Infrastructure

################################################################################
# Environment Settings
################################################################################
ENVIRONMENT=staging
INSTANCE_NAME=staging
LOG_LEVEL=DEBUG

################################################################################
# Database Configuration
################################################################################
DATABASE_PATH=/app/data/oracle.db
DATABASE_BACKUP_DIR=/app/backups
DATABASE_BACKUP_RETENTION_DAYS=7

################################################################################
# Application Settings
################################################################################
ORACLE_VERSION=1.0.0
ENABLE_SELF_HEALING=true
ENABLE_LEARNING_SYSTEM=true
ENABLE_VERSION_CONTROL=true
ENABLE_KNOWLEDGE_BASE=true

################################################################################
# Justice League Agents (11 agents)
################################################################################
AGENTS=batman,superman,wonder_woman,flash,green_lantern,aquaman,cyborg,martian_manhunter,hawkgirl,green_arrow,black_canary

################################################################################
# Health Monitoring
################################################################################
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
METRICS_RETENTION_DAYS=30
ENABLE_PREDICTIVE_MAINTENANCE=true

################################################################################
# Version Control
################################################################################
GIT_ENABLED=true
GIT_AUTO_COMMIT=true
VERSION_BACKUP_ENABLED=true
BREAKING_CHANGE_DETECTION=true

################################################################################
# Self-Healing Configuration
################################################################################
AUTO_HEAL_ENABLED=true
MAX_HEAL_RETRIES=3
HEAL_RETRY_DELAY=5
LOW_RISK_AUTO_APPLY=true
MEDIUM_RISK_AUTO_APPLY=false
HIGH_RISK_AUTO_APPLY=false

################################################################################
# Learning System
################################################################################
ENABLE_CROSS_AGENT_LEARNING=true
KNOWLEDGE_SHARING_ENABLED=true
PATTERN_RECOGNITION_THRESHOLD=0.8
MIN_PATTERN_OCCURRENCES=3

################################################################################
# Performance Settings
################################################################################
MAX_CONCURRENT_OPERATIONS=10
OPERATION_TIMEOUT=300
CACHE_ENABLED=true
CACHE_TTL=3600

################################################################################
# Logging Configuration
################################################################################
LOG_FORMAT=json
LOG_TO_FILE=true
LOG_TO_CONSOLE=true
LOG_FILE_PATH=/app/logs/oracle.log
LOG_FILE_MAX_SIZE=100M
LOG_FILE_MAX_BACKUPS=10

################################################################################
# Monitoring & Metrics
################################################################################
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=8000
METRICS_EXPORT_ENABLED=true
CUSTOM_METRICS_ENABLED=true

################################################################################
# Alert Configuration
################################################################################
ALERT_EMAIL_ENABLED=false
ALERT_SLACK_ENABLED=false
ALERT_WEBHOOK_ENABLED=false
ALERT_CRITICAL_THRESHOLD=3
ALERT_WARNING_THRESHOLD=5

################################################################################
# Security Settings
################################################################################
ENABLE_AUDIT_LOG=true
AUDIT_LOG_PATH=/app/logs/audit.log
SECURE_MODE=false  # Staging allows less strict security

################################################################################
# External Integrations
################################################################################
SUPERMAN_CONNECTOR_ENABLED=true
EXTERNAL_API_TIMEOUT=30
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_PERIOD=60

################################################################################
# Backup & Recovery
################################################################################
AUTO_BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_COMPRESSION=true
BACKUP_RETENTION_COUNT=7

################################################################################
# Testing & Development
################################################################################
ENABLE_TEST_MODE=true
MOCK_EXTERNAL_SERVICES=true
VERBOSE_ERROR_MESSAGES=true
STACK_TRACES_ENABLED=true
